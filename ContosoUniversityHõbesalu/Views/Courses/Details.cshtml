@model ContosoUniversityHõbesalu.Models.CourseViewModel
@{
    ViewData["Title"] = "Details";
}


<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.course.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.course.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.course.Credits)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.course.Credits)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.course.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.course.Department.Name)
        </dd>
        <dt class="col-sm-2">
            Student count
        </dt>
        <dd class="col-sm-10">
            @Model.assignedStudents.Count()
        </dd>
        <dt class="col-sm-2">
            Instructors
        </dt>
        <dd class="col-sm-10">
            @{
                foreach(var instructor in Model.assignedInstructors)
                {
                    @instructor.FullName @:<br>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.course.CourseID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>